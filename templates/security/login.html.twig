{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    <a class="nav-link btn btn-secondary" href="{{ path('app_register') }}">S'enregistrer</a>
</form>
{% endblock %}


{% block stylesheets %}
<style>

/* Centrez le formulaire de connexion horizontalement */
form {
  max-width: 330px;
  margin: 0 auto;
}

/* Ajoutez de l'espace autour des éléments du formulaire */
form label,
form input {
  margin-bottom: 10px;
}

/* Définissez la couleur du bouton de connexion */
form button {
  background-color: #007bff;
  border-color: #007bff;
}

/* Modifiez la couleur de survol du bouton de connexion */
form button:hover {
  background-color: #0069d9;
  border-color: #0062cc;
}

/* Centrez le message d'erreur */
.alert-danger {
  text-align: center;
}

/* Ajoutez de l'espace sous le formulaire de connexion si l'utilisateur est connecté */
.mb-3 {
  margin-bottom: 20px;
}

</style>
{% endblock %}
