{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky pt-3">
                    <h4 class="text-white mb-4">Navigation</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Accueil</a>
                        </li>
                        {# Add more navigation links here #}
                    </ul>
                    <h4 class="text-white mt-4 mb-4">Albums</h4>
                    <ul class="nav flex-column overflow-auto" style="height: 60vh;">
                        {% for album in albums %}
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_album_show', {'id': album.id}) }}">{{ album.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for album in albums %}
                        <div class="col">
                            <div class="card bg-dark text-white album-card">
                                <img src="{{ album.image) }}" class="card-img-top" alt="{{ album.name }}" style="max-height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">{{ album.name }}</h5>
                                    <p class="card-text">{{ album.artist }}</p>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="text-center text-white">No records found</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="text-center mt-4">
                    <a href="{{ path('app_album_new') }}" class="btn btn-success">Create new</a>
                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #181818;
        }

        .sidebar {
            height: 100vh;
            padding-right: 0;
            padding-left: 0;
        }

        .album-card {
            background-color: #282828;
            transition: background-color 0.3s;
        }

        .album-card:hover {
            background-color:
 #383838;
    }
</style>

{% endblock %}
