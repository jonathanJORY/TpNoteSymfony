{% extends 'base.html.twig' %}


{% block title %}Création d'un album{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-4">Création d'un album</h1>
    <div class="row mt-5 justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card artist-card">
                <div class="card-body">
                    <div class="form-group">
                        {{ form_start(form) }}
                            {{ form_row(form.name, {
                                label: "Nom de l'album",
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'placeholder': "Entrez le nom de l'album"
                                }
                            }) }}
                            {{ form_row(form.releaseDate, {
                                label: 'Date de création',
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'placeholder': "Entrez la date de création de l'album"
                                }
                            }) }}
                            {{ form_row(form.image, {
                                label: "Url de l'image de l'album",
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'placeholder': "Entrez l'url de l'image de l'album"
                                }
                            }) }}
                            {{ form_row(form.artist, {
                                label: 'Artist',
                                'attr': {
                                    'class': 'form-control mb-3',
                                },
                                'choice_attr': {
                                    'selected': 'selected',
                                },
                            }) }}
                            <button type="submit" class="btn btn-outline-light btn-rounded">Crée l'album</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col text-center">
            <a href="{{ path('app_album_index') }}" class="btn btn-secondary">Retour à la liste des album</a>
        </div>
    </div>
    
</div>
{% endblock %}