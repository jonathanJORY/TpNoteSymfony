{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4">{{ artist.name }}</h1>
        <div class="row mt-5 justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card artist-card">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ artist.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ artist.name }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ artist.image }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('app_artist_edit', {'id': artist.id}) }}" class="btn btn-outline-light btn-rounded">Modifier l'artiste</a>
                        {{ include('artist/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col text-center">
                <a href="{{ path('app_artist_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
